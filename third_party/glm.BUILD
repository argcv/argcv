# OpenGL Mathematics (GLM)
# OpenGL Mathematics (GLM) is a header only C++ mathematics
# library for graphics software based on the OpenGL Shading
# Language (GLSL) specifications.
licenses(["notice"]) # The Happy Bunny License (Modified MIT License)

cc_library(
    name = "glm",
    hdrs = glob([
        "glm/**/*.h",
        "glm/**/*.hpp",
        "glm/**/*.inl",
    ]),
    visibility = ["//visibility:public"],
    includes = [
        ".",
    ],
)